<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_scrollFlags="scroll|enterAlways"
    android:id="@+id/approvebook_item_container"
    >
    <LinearLayout
        android:id="@+id/title_wraper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/book_subject"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="제목"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/desc_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:weightSum="20"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">
            <ImageView
                android:id="@+id/bookimg"
                android:layout_width="0dp"
                android:layout_height="181dp"

                android:background="#ffffff"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="0dp" />
            <Button
                android:id="@+id/cancle_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/login_button"
                android:elevation="0dp"
                android:text="인증시험 취소"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#ffffff"/>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/desc_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="저자"
                tools:layout_editor_absoluteY="56dp" />

            <TextView
                android:id="@+id/book_company"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="출판사" />

            <TextView
                android:id="@+id/booklist"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="도서분류" />

            <TextView
                android:id="@+id/book_day"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="출판일" />

            <TextView
                android:id="@+id/pass_point"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="합격점수" />


            <TextView
                android:id="@+id/autho_point"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="인증포인트" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/desc_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:id="@+id/book_author0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <TextView
                android:id="@+id/book_company0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <TextView
                android:id="@+id/booklist0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <TextView
                android:id="@+id/book_day0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <TextView
                android:id="@+id/pass_point0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <TextView
                android:id="@+id/autho_point0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />
        </LinearLayout>


    </LinearLayout>

    <!--<Button-->
    <!--android:id="@+id/apply_button"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="48dp"-->
    <!--android:background="#aa000000"-->
    <!--android:elevation="0dp"-->
    <!--android:text="인증시험 신청"-->
    <!--android:textColor="#ffffff"-->
    <!--app:layout_constraintBottom_toBottomOf="@+id/bookimg"-->
    <!--app:layout_constraintHorizontal_bias="0.0"-->
    <!--app:layout_constraintLeft_toLeftOf="@+id/bookimg"-->
    <!--app:layout_constraintRight_toRightOf="@+id/bookimg" />-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="3"
       android:weightSum="6"
       android:orientation="vertical">

       <TextView
           android:id="@+id/Approve_info"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:padding="0dp"
           android:gravity="center"
           android:text="신청 정보"
           android:textSize="18dp" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="3"
           android:weightSum="6">

           <TextView
               android:id="@+id/D_day"
               android:layout_width="0dp"
               android:layout_height="35dp"
               android:layout_weight="1"
               android:gravity="center"
               android:text="응시일" />

           <TextView
               android:id="@+id/D_dayInfo"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="2"
               android:gravity="center_vertical" />

           <TextView
               android:id="@+id/Ap_day"
               android:layout_width="0dp"
               android:layout_height="35dp"
               android:layout_weight="1"
               android:gravity="center"
               android:text="신청일" />

           <TextView
               android:id="@+id/Approve_dayInfo"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="2"
               android:gravity="center_vertical" />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="2"
           android:weightSum="6">

           <TextView
               android:id="@+id/Context"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:gravity="center"
               android:text="내용" />

           <TextView
               android:id="@+id/Context_Info"
               android:gravity="center_vertical"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="5" />
       </LinearLayout>


   </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Context" />







</LinearLayout>
